        </div>
    </div>

    <!-- Interactive Pose Modal -->
    <div class="pose-modal" id="poseModal">
        <div class="pose-modal-content">
            <button class="pose-modal-close" onclick="closePoseGuide()">√ó</button>
            <h2 id="poseTitle" style="color: var(--therapeutic-green); margin-bottom: 1rem;"></h2>
            <div class="timer-display" id="poseTimer">0:00</div>
            
            <div class="interactive-guide">
                <div class="guide-animation" id="guideAnimation">
                    <!-- Dynamic animation here -->
                </div>
                <div class="guide-steps" id="guideSteps">
                    <!-- Dynamic steps here -->
                </div>
            </div>

            <div class="control-buttons">
                <button class="control-btn" id="startBtn" onclick="startPoseTimer()">‚ñ∂ Start</button>
                <button class="control-btn pause" id="pauseBtn" onclick="pausePoseTimer()" style="display: none;">‚è∏ Pause</button>
                <button class="control-btn" onclick="askNUPI()">üí¨ Talk to NUPI</button>
            </div>
        </div>
    </div>

    <!-- Enhanced Chat Widget for Exercises -->
    <link rel="stylesheet" href="chat-widget.css">
    <link rel="stylesheet" href="yoga-animations.css">
    <script src="chat-guide-system.js"></script>
