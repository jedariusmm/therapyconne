# TherapyConnect Environment Configuration
# Copy this file to .env and fill in your actual values

# Stripe Keys
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Price IDs
# Create these in: https://dashboard.stripe.com/products
STRIPE_PRICE_BASIC=price_YOUR_BASIC_PRICE_ID
STRIPE_PRICE_PREMIUM=price_YOUR_PREMIUM_PRICE_ID
STRIPE_PRICE_ENTERPRISE=price_YOUR_ENTERPRISE_PRICE_ID

# Server Configuration
PORT=3000
NODE_ENV=development

# Application URLs
APP_URL=http://localhost:3000
SUCCESS_URL=http://localhost:3000/success.html
CANCEL_URL=http://localhost:3000/sign-in.html

# Database (optional - for storing user data)
# DATABASE_URL=mongodb://localhost:27017/therapyconnect
# or
# DATABASE_URL=postgresql://user:password@localhost:5432/therapyconnect

# Email Configuration (optional - for sending notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@therapyconnect.com

# Session Secret (for user authentication)
SESSION_SECRET=your-random-secret-key-here-change-this

# Firebase/Auth Configuration (optional)
# FIREBASE_API_KEY=your-firebase-api-key
# FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
# FIREBASE_PROJECT_ID=your-project-id
